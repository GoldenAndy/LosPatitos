@model IEnumerable<Los_Patitos.Models.SinpeModel>
@using Los_Patitos.Models
@inject Microsoft.Extensions.Configuration.IConfiguration Cfg
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = ViewData["Title"] ?? "SINPEs de la Caja";
    CajaModel? caja = ViewBag.Caja as CajaModel;

    var apiBaseUrl = Cfg["ApiExterno:BaseUrl"] ?? ""; // p.ej. https://localhost:7271
    var __token = Antiforgery.GetAndStoreTokens(Context).RequestToken;

    var idCaja = caja?.IdCaja ?? 0;
    var idComercio = caja?.IdComercio ?? 0;
    var telefonoCaja = caja?.TelefonoSINPE ?? "";
}
<meta name="csrf-token" content="@__token" />

<div id="sinpe-root"
     class="py-6"
     data-api="@apiBaseUrl"
     data-idcaja="@idCaja"
     data-idcomercio="@idComercio"
     data-telefonocaja="@telefonoCaja"
     data-sync-local-url="@Url.Action("SincronizarAjax", "Caja")"
     data-auth-url="/api/autenticacion/token"
     data-sync-api-url="/api/sinpe/sincronizar"
     data-consultar-url="/api/sinpe/consultar">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Detalle de SINPE actual de la caja y transacciones recibidas.</p>
    </div>

    <!-- Información de la Caja -->
    @if (caja != null)
    {
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm mb-6">
            <div class="px-5 py-4 border-b border-gray-200 bg-sky-50">
                <h2 class="text-sm font-semibold uppercase text-sky-700">SINPE actual de la caja</h2>
            </div>

            <div class="p-5">
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Nombre de la caja</dt>
                        <dd class="mt-1 text-sm text-gray-900 font-medium">@caja.Nombre</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-gray-500">Teléfono SINPE</dt>
                        <dd class="mt-1 text-sm text-gray-900 font-medium">@caja.TelefonoSINPE</dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-gray-500">Estado</dt>
                        <dd class="mt-1">
                            <span class="px-2 py-1 rounded-md text-xs font-bold @(caja.Estado ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                @(caja.Estado ? "Activa" : "Inactiva")
                            </span>
                        </dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-gray-500">Fecha de registro</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @caja.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")
                        </dd>
                    </div>

                    <div>
                        <dt class="text-sm font-medium text-gray-500">Última modificación</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            @((caja.FechaDeModificacion?.ToString("dd/MM/yyyy HH:mm")) ?? "Sin cambios")
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    }


    <!-- SINPEs Recibidos (modelo local) -->
    @if (Model == null || !Model.Any())
    {
        <div class="rounded-lg border border-gray-200 bg-white p-6 text-gray-600">
            No se han recibido SINPEs para esta caja.
        </div>
    }
    else
    {
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm">
            <div class="px-5 py-4 border-b border-gray-200 bg-gray-50">
                <h2 class="text-sm font-semibold uppercase text-gray-700">SINPEs recibidos</h2>
            </div>

            <div class="p-5 space-y-4">
                @foreach (var sinpe in Model.OrderByDescending(s => s.FechaDeRegistro))
                {
                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3">
                            <div>
                                <p class="text-sm text-gray-500">Monto</p>
                                <p class="text-lg font-semibold text-gray-900">
                                    ₡@sinpe.Monto.ToString("N2")
                                </p>
                            </div>

                            <div class="flex items-center gap-2">
                                <span class="px-2 py-1 rounded-md text-xs font-bold @(sinpe.Estado ? "bg-green-100 text-green-700" : "bg-yellow-100 text-yellow-800")">
                                    @(sinpe.Estado ? "Sincronizado" : "No sincronizado")
                                </span>

                                <span class="text-sm text-gray-500 whitespace-nowrap">
                                    @sinpe.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                        </div>

                        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="rounded-lg bg-gray-50 border border-gray-200 p-3">
                                <p class="text-xs font-semibold uppercase text-gray-500">Origen</p>
                                <p class="mt-1 text-sm text-gray-900"><span class="font-medium">Tel:</span> @sinpe.TelefonoOrigen</p>
                                <p class="text-sm text-gray-900"><span class="font-medium">Nombre:</span> @sinpe.NombreOrigen</p>
                            </div>

                            <div class="rounded-lg bg-gray-50 border border-gray-200 p-3">
                                <p class="text-xs font-semibold uppercase text-gray-500">Destinatario</p>
                                <p class="mt-1 text-sm text-gray-900"><span class="font-medium">Tel:</span> @sinpe.TelefonoDestinaria</p>
                                <p class="text-sm text-gray-900"><span class="font-medium">Nombre:</span> @sinpe.NombreDestinaria</p>
                            </div>
                        </div>

                        <div class="mt-4">
                            <p class="text-sm font-medium text-gray-700 mb-1">Descripción</p>
                            <p class="text-sm text-gray-600">
                                @(!string.IsNullOrWhiteSpace(sinpe.Descripcion) ? sinpe.Descripcion : "Sin descripción")
                            </p>
                        </div>

                        @if (!sinpe.Estado)
                        {
                            <div class="mt-4">
                                <button type="button"
                                        class="inline-flex items-center justify-center rounded-lg bg-yellow-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-yellow-600 js-sincronizar-sinpe"
                                        data-id-sinpe="@sinpe.IdSinpe">
                                    Sincronizar
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <!-- Volver -->
    <div class="mt-6">
        <a asp-controller="Comercio" asp-action="Index"
           class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
            Volver
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/sinpe-ver.js" asp-append-version="true"></script>
}
