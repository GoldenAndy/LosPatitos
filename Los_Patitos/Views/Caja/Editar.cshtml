@model Los_Patitos.Models.CajaModel

@{
    ViewData["Title"] = "Editar Caja";
}

<h2 class="mb-3">Editar Caja</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdCaja" />
    <input type="hidden" asp-for="IdComercio" />

    <div class="mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="TelefonoSINPE"></label>
        <input asp-for="TelefonoSINPE" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" asp-route-idComercio="@Model.IdComercio" class="btn btn-secondary">Volver</a>
</form>

