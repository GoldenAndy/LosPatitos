@model Los_Patitos.Models.CajaModel

@{
    ViewData["Title"] = "Editar Caja";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Actualice la información y el estado de la caja.</p>
    </div>

    <!-- Errores -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-800">
            <p class="font-semibold mb-2">Revise los siguientes errores:</p>
            <ul class="list-disc pl-5 space-y-1">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Card -->
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">

        <form asp-action="Editar" method="post" class="space-y-6">
            <input type="hidden" asp-for="IdCaja" />
            <input type="hidden" asp-for="IdComercio" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- Nombre -->
                <div>
                    <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Nombre"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700
                                  focus:ring-sky-500 focus:border-sky-500" />
                    <span asp-validation-for="Nombre" class="text-sm text-red-600"></span>
                </div>

                <!-- Teléfono SINPE -->
                <div>
                    <label asp-for="TelefonoSINPE" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="TelefonoSINPE"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700
                                  focus:ring-sky-500 focus:border-sky-500" />
                    <span asp-validation-for="TelefonoSINPE" class="text-sm text-red-600"></span>
                </div>

                <!-- Descripción -->
                <div class="md:col-span-2">
                    <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Descripcion"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700
                                  focus:ring-sky-500 focus:border-sky-500" />
                    <span asp-validation-for="Descripcion" class="text-sm text-red-600"></span>
                </div>

                <!-- Estado -->
                <div>
                    <label asp-for="Estado" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <select asp-for="Estado"
                            class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700
                                   focus:ring-sky-500 focus:border-sky-500">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-sm text-red-600"></span>
                </div>

            </div>

            <!-- Botones -->
            <div class="flex flex-col sm:flex-row gap-3 pt-2">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-sky-600 px-4 py-2.5
                               text-sm font-medium text-white hover:bg-sky-700">
                    Guardar cambios
                </button>

                <a asp-action="Index" asp-route-idComercio="@Model.IdComercio"
                   class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white
                          px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Volver
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}