@model List<Los_Patitos.Models.UsuarioModel>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Gestión de usuarios del sistema bancario.</p>
    </div>

    <!-- Alertas -->
    @if (TempData["Ok"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Ok"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    }

    <!-- Botón de acción -->
    <div class="mb-6">
        <a asp-action="Crear" asp-route-idComercio="@ViewBag.IdComercio"
           class="bg-sky-600 hover:bg-sky-700 text-white font-medium px-4 py-2.5 rounded-lg transition-colors inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Registrar Usuario
        </a>
    </div>

    <!-- Tabla -->
    <div class="overflow-x-auto bg-white border border-gray-200 shadow-sm rounded-lg">
        <table class="min-w-full text-sm text-left text-gray-600">

            <thead class="bg-sky-50 text-sky-700 text-xs uppercase font-medium border-b border-gray-200">
                <tr>
                    <th class="px-4 py-3">Nombres</th>
                    <th class="px-4 py-3">Primer Apellido</th>
                    <th class="px-4 py-3">Segundo Apellido</th>
                    <th class="px-4 py-3">Identificación</th>
                    <th class="px-4 py-3">Correo Electrónico</th>
                    <th class="px-4 py-3">Fecha Registro</th>
                    <th class="px-4 py-3">Fecha Modificación</th>
                    <th class="px-4 py-3">Estado</th>
                    <th class="px-4 py-3 text-center" style="width: 120px;">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="9" class="px-4 py-8 text-center text-gray-500">
                            <div class="flex flex-col items-center gap-2">
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                <span class="font-medium">No hay usuarios registrados.</span>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var u in Model)
                    {
                        <tr class="border-b hover:bg-gray-50">

                            <td class="px-4 py-3 font-medium text-gray-900">@u.Nombres</td>

                            <td class="px-4 py-3">@u.PrimerApellido</td>

                            <td class="px-4 py-3">@u.SegundoApellido</td>

                            <td class="px-4 py-3 font-medium text-gray-900">@u.Identificacion</td>

                            <td class="px-4 py-3">@u.CorreoElectronico</td>

                            <td class="px-4 py-3 whitespace-nowrap text-gray-500">
                                @u.FechaDeRegistro.ToString("yyyy-MM-dd HH:mm")
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap text-gray-500">
                                @(u.FechaDeModificacion?.ToString("yyyy-MM-dd HH:mm") ?? "-")
                            </td>

                            <td class="px-4 py-3">
                                @if (u.Estado)
                                {
                                    <span class="px-2 py-1 rounded-md text-xs font-bold bg-green-100 text-green-700">
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 rounded-md text-xs font-bold bg-red-100 text-red-700">
                                        Inactivo
                                    </span>
                                }
                            </td>

                            <td class="px-4 py-3 text-center">
                                <a asp-action="Editar" asp-route-id="@u.IdUsuario"
                                   class="bg-yellow-500 hover:bg-yellow-600 text-white text-xs font-medium px-3 py-1.5 rounded transition-colors inline-block">
                                    Editar
                                </a>
                            </td>

                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>