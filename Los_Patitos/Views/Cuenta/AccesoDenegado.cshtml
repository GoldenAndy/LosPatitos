@{
    ViewData["Title"] = "Acceso denegado";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="w-full max-w-lg bg-white border border-gray-200 rounded-xl shadow-sm p-8 text-center">
        <h1 class="text-3xl font-bold text-red-700 mb-3">Acceso denegado</h1>
        <p class="text-gray-700 mb-6">
            No cuenta con permisos para acceder a este recurso.
            Si considera que es un error, contacte al administrador del sistema.
        </p>

        <div class="flex gap-3 justify-center">
            <a asp-controller="Home" asp-action="Index"
               class="px-5 py-2.5 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium">
                Ir al inicio
            </a>
            <a asp-controller="Cuenta" asp-action="IniciarSesion"
               class="px-5 py-2.5 rounded-lg bg-sky-600 hover:bg-sky-700 text-white font-medium">
                Iniciar sesión con otra cuenta
            </a>
        </div>
    </div>
</div>
