<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Los Patitos</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Los_Patitos.styles.css" asp-append-version="true" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Flowbite -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-50 d-flex flex-column min-vh-100 font-md">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm"
             style="height: 58px; font-family: 'Segoe UI', sans-serif;">
            <div class="container-fluid px-3 d-flex align-items-center justify-content-between">

                <!-- Brand -->
                <a class="navbar-brand fw-bold d-flex align-items-center"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index"
                   style="font-size: 1.3rem; color: #0d6efd;">
                    🦆 Los Patitos
                </a>

                <!-- Links -->
                <ul class="nav" style="gap: 0.75rem;">
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home" asp-action="Index">
                            Inicio
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Comercio" asp-action="Index">
                            Comercios
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Sinpe" asp-action="Crear">
                            SINPE Móvil
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Bitacora" asp-action="Index">
                            Bitácora
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home" asp-action="Privacy">
                            Privacidad
                        </a>
                    </li>
                </ul>

                <!-- Login / Usuario -->
                <div class="d-flex align-items-center">
                    @await Html.PartialAsync("_LoginPartial")
                </div>

            </div>
        </nav>
    </header>

    <main class="container py-4 flex-grow-1 mb-5" id="main-content" tabindex="-1">
        @RenderBody()
    </main>

    <footer class="footer text-gray-600 bg-gray-50 mt-auto py-3 border-top">
        <div class="container px-4">
            &copy; 2025 - Los Patitos -
            <a asp-controller="Home"
               asp-action="Privacy"
               class="text-sky-600 hover:text-sky-700">
                Privacy
            </a>
        </div>
    </footer>

    <!-- ACCESIBILIDAD -->
    <button id="btn-accesibilidad"
            type="button"
            class="btn"
            aria-label="Abrir opciones de accesibilidad"
            aria-controls="panel-accesibilidad"
            aria-expanded="false">
        ⚙️
    </button>

    <div id="panel-accesibilidad"
         class="card shadow"
         role="region"
         aria-label="Opciones de accesibilidad">
        <div class="card-body">
            <h2 class="h6 mb-3">Accesibilidad</h2>

            <div class="form-check form-switch mb-3">
                <input class="form-check-input"
                       type="checkbox"
                       id="chk-contraste" />
                <label class="form-check-label"
                       for="chk-contraste">
                    Alto contraste
                </label>
            </div>

            <div class="mb-2">
                <label class="form-label"
                       for="sel-font">
                    Tamaño de texto
                </label>
                <select id="sel-font"
                        class="form-select form-select-sm">
                    <option value="font-md">Normal</option>
                    <option value="font-lg">Grande</option>
                    <option value="font-xl">Muy grande</option>
                </select>
            </div>

            <button id="btn-reset-a11y"
                    type="button"
                    class="btn btn-outline-secondary btn-sm mt-3 w-100">
                Restablecer
            </button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>