@model Los_Patitos.Models.Comercio
@{
    ViewData["Title"] = "Detalles del comercio";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Información general y estado actual del comercio.</p>
    </div>

    <!-- Card -->
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">

            <!-- Identificación -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Identificación</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Identificacion</dd>
            </div>

            <!-- Tipo identificación -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Tipo de identificación</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 rounded-md text-xs font-bold
                        @(Model.TipoIdentificacion == 1 ? "bg-blue-100 text-blue-700" :
                                                    Model.TipoIdentificacion == 2 ? "bg-purple-100 text-purple-700" :
                                                    "bg-gray-100 text-gray-700")">
                        @(Model.TipoIdentificacion == 1 ? "Física" :
                                                Model.TipoIdentificacion == 2 ? "Jurídica" :
                                                "Desconocido")
                    </span>
                </dd>
            </div>

            <!-- Nombre -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Nombre</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Nombre</dd>
            </div>

            <!-- Tipo comercio -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Tipo de comercio</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 rounded-md text-xs font-bold
                        @(Model.TipoComercio == 1 ? "bg-sky-100 text-sky-700" :
                                                    Model.TipoComercio == 2 ? "bg-green-100 text-green-700" :
                                                    Model.TipoComercio == 3 ? "bg-yellow-100 text-yellow-700" :
                                                    Model.TipoComercio == 4 ? "bg-gray-100 text-gray-700" :
                                                    "bg-gray-100 text-gray-700")">
                        @(Model.TipoComercio == 1 ? "Restaurantes" :
                                                Model.TipoComercio == 2 ? "Supermercados" :
                                                Model.TipoComercio == 3 ? "Ferreterías" :
                                                Model.TipoComercio == 4 ? "Otros" :
                                                "Desconocido")
                    </span>
                </dd>
            </div>

            <!-- Teléfono -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Teléfono</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Telefono</dd>
            </div>

            <!-- Correo -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Correo electrónico</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.CorreoElectronico</dd>
            </div>

            <!-- Dirección -->
            <div class="md:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Dirección</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Direccion</dd>
            </div>

            <!-- Fecha registro -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Fecha de registro</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")
                </dd>
            </div>

            <!-- Fecha modificación -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Fecha de modificación</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @(Model.FechaDeModificacion.HasValue
                                        ? Model.FechaDeModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                        : "—")
                </dd>
            </div>

            <!-- Estado -->
            <div>
                <dt class="text-sm font-medium text-gray-500">Estado</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 rounded-md text-xs font-bold
                        @(Model.Estado ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                        @(Model.Estado ? "Activo" : "Inactivo")
                    </span>
                </dd>
            </div>

        </dl>
    </div>

    <!-- Botones -->
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <a asp-action="Editar" asp-route-id="@Model.IdComercio"
           class="inline-flex items-center justify-center rounded-lg bg-yellow-500 px-4 py-2.5
                  text-sm font-medium text-white hover:bg-yellow-600">
            Editar
        </a>

        <a asp-action="Index"
           class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white
                  px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
            Volver
        </a>
    </div>

</div>