@model List<Los_Patitos.Models.ReporteMensual>

@{
    ViewData["Title"] = "Reportes mensuales";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Generar" method="post" class="mb-3">
    <button type="submit" class="btn btn-primary">
        Generar reportes
    </button>
</form>

<form asp-action="Descargar" method="get" class="mb-3 d-inline">
    <button type="submit" class="btn btn-success">
        Descargar reporte
    </button>
</form>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No hay reportes generados.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Comercio</th>
                <th>Cantidad de cajas</th>
                <th>Monto recaudado</th>
                <th>Cantidad de SINPEs</th>
                <th>Monto total de comisión</th>
                <th>Fecha del reporte</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Comercio?.Nombre</td>
                    <td>@r.CantidadDeCajas</td>
                    <td>₡@r.MontoTotalRecaudado.ToString("N2")</td>
                    <td>@r.CantidadDeSINPES</td>
                    <td>₡@r.MontoTotalComision.ToString("N2")</td>
                    <td>@r.FechaDelReporte.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-controller="Comercio" asp-action="Index" class="btn btn-outline-secondary">
        Volver a comercios
    </a>
</p>
