@model List<Los_Patitos.Models.ReporteMensual>

@{
    ViewData["Title"] = "Reportes mensuales";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Generación y descarga de reportes por comercio (SINPE / cajas / comisiones).</p>
    </div>

    <!-- Mensajes -->
    @if (TempData["Ok"] != null)
    {
        <div class="mb-6 rounded-lg border border-green-200 bg-green-50 px-4 py-3 text-green-800">
            @TempData["Ok"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="mb-6 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-red-800">
            @TempData["Error"]
        </div>
    }

    <!-- Card de acciones -->
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-5 mb-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <div>
                <h2 class="text-base font-semibold text-gray-800">Acciones</h2>
                <p class="text-sm text-gray-500">Genere o descargue el reporte más reciente.</p>
            </div>

            <div class="flex flex-col sm:flex-row gap-3">
                <form asp-action="Generar" method="post">
                    <button type="submit"
                            class="inline-flex items-center justify-center rounded-lg bg-sky-600 px-4 py-2.5
                                   text-sm font-medium text-white hover:bg-sky-700">
                        Generar reportes
                    </button>
                </form>

                <form asp-action="Descargar" method="get">
                    <button type="submit"
                            class="inline-flex items-center justify-center rounded-lg bg-green-600 px-4 py-2.5
                                   text-sm font-medium text-white hover:bg-green-700">
                        Descargar reporte
                    </button>
                </form>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="rounded-lg border border-gray-200 bg-white p-6 text-gray-600">
            No hay reportes generados.
        </div>
    }
    else
    {
        <!-- Tabla -->
        <div class="overflow-x-auto bg-white border border-gray-200 shadow-sm rounded-lg">
            <table class="min-w-full text-sm text-left text-gray-600">

                <thead class="bg-sky-50 text-sky-700 text-xs uppercase font-medium border-b border-gray-200">
                    <tr>
                        <th class="px-4 py-3">Comercio</th>
                        <th class="px-4 py-3">Cantidad de cajas</th>
                        <th class="px-4 py-3">Monto recaudado</th>
                        <th class="px-4 py-3">Cantidad de SINPEs</th>
                        <th class="px-4 py-3">Monto total de comisión</th>
                        <th class="px-4 py-3">Fecha del reporte</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-4 py-3 font-medium text-gray-900">
                                @(r.Comercio?.Nombre ?? "—")
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap">
                                @r.CantidadDeCajas
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap">
                                ₡@r.MontoTotalRecaudado.ToString("N2")
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap">
                                @r.CantidadDeSINPES
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap">
                                ₡@r.MontoTotalComision.ToString("N2")
                            </td>

                            <td class="px-4 py-3 whitespace-nowrap">
                                @r.FechaDelReporte.ToString("dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }

    <!-- Volver -->
    <div class="mt-6">
        <a asp-controller="Comercio" asp-action="Index"
           class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white
                  px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
            Volver a comercios
        </a>
    </div>

</div>