@model Los_Patitos.Models.SinpeModel

<h2>Registrar SINPE</h2>

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-danger">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
    <p>@error.ErrorMessage</p>
        }
</div>
}

<form asp-action="Crear" method="post">
    <div class="mb-3">
        <label asp-for="TelefonoOrigen" class="form-label">Teléfono Origen</label>
        <input asp-for="TelefonoOrigen" class="form-control" />
        <span asp-validation-for="TelefonoOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombreOrigen" class="form-label">Nombre Origen</label>
        <input asp-for="NombreOrigen" class="form-control" />
        <span asp-validation-for="NombreOrigen" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TelefonoDestinaria" class="form-label">Teléfono Destino</label>
        <input asp-for="TelefonoDestinaria" class="form-control" />
        <span asp-validation-for="TelefonoDestinaria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombreDestinaria" class="form-label">Nombre Destino</label>
        <input asp-for="NombreDestinaria" class="form-control" />
        <span asp-validation-for="NombreDestinaria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label">Monto (₡)</label>
        <input asp-for="Monto" type="number" step="0.01" min="0.01" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción (opcional)</label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger mt-2">@ViewBag.Error</div>
}

@if (TempData["Ok"] != null)
{
<div class="alert alert-success mt-2">@TempData["Ok"]</div>
}
