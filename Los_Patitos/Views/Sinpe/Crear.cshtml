@model Los_Patitos.Models.SinpeModel
@{
    ViewData["Title"] = "Transacción SINPE Móvil";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700 flex items-center gap-3">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            @ViewData["Title"]
        </h1>
        <p class="text-gray-600 mt-2">
            Complete los datos para realizar una transferencia SINPE Móvil hacia una caja activa del sistema.
        </p>
    </div>

    <!-- Alertas validación -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
            <div class="flex items-start gap-2">
                <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                <div>
                    <strong class="font-semibold">Se encontraron los siguientes errores:</strong>
                    <ul class="mt-2 ml-4 list-disc list-inside space-y-1">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }

    <!-- Alertas TempData y ViewBag -->
    @if (TempData["Ok"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Ok"]</span>
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span>@ViewBag.Error</span>
        </div>
    }

    <!-- Formulario -->
    <form asp-action="Crear" method="post" class="bg-white border border-gray-200 shadow-sm rounded-lg p-6">

        <!-- Datos de Origen -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Datos de Origen
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="TelefonoOrigen" class="block text-sm font-medium text-gray-700 mb-1">
                        Teléfono Origen
                    </label>
                    <input asp-for="TelefonoOrigen"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. 85201234" />
                    <span asp-validation-for="TelefonoOrigen" class="text-red-600 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="NombreOrigen" class="block text-sm font-medium text-gray-700 mb-1">
                        Nombre Origen
                    </label>
                    <input asp-for="NombreOrigen"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. María Pérez" />
                    <span asp-validation-for="NombreOrigen" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-200 my-6"></div>

        <!-- Datos de Destino -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Datos de Destino
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="TelefonoDestinaria" class="block text-sm font-medium text-gray-700 mb-1">
                        Teléfono Destino
                    </label>
                    <input asp-for="TelefonoDestinaria"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. 88887777" />
                    <span asp-validation-for="TelefonoDestinaria" class="text-red-600 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="NombreDestinaria" class="block text-sm font-medium text-gray-700 mb-1">
                        Nombre Destino
                    </label>
                    <input asp-for="NombreDestinaria"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. Caja Pepito" />
                    <span asp-validation-for="NombreDestinaria" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>

        <div class="border-t border-gray-200 my-6"></div>

        <!-- Datos de Transacción -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Datos de Transacción
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Monto" class="block text-sm font-medium text-gray-700 mb-1">
                        Monto (₡)
                    </label>
                    <input asp-for="Monto" type="number" step="0.01" min="0.01"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. 5000.00" />
                    <span asp-validation-for="Monto" class="text-red-600 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">
                        Descripción <span class="text-gray-400 font-normal">(opcional)</span>
                    </label>
                    <input asp-for="Descripcion"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-700 placeholder-gray-400 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="Ej. Compra de accesorios" />
                    <span asp-validation-for="Descripcion" class="text-red-600 text-sm mt-1 block"></span>
                </div>
            </div>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-3 mt-8 pt-6 border-t border-gray-200">
            <a asp-controller="Home" asp-action="Index"
               class="w-full sm:w-auto bg-white hover:bg-gray-50 text-gray-700 font-medium px-6 py-2.5 rounded-lg border border-gray-300 transition-colors inline-flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Volver
            </a>
            <button type="submit"
                    class="w-full sm:w-auto bg-green-600 hover:bg-green-700 text-white font-medium px-6 py-2.5 rounded-lg transition-colors inline-flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
                Hacer Transacción
            </button>
        </div>

    </form>

</div>
