@model List<Los_Patitos.Models.Comercio>
@{
    ViewData["Title"] = "Comercios";
}

<div class="py-6">

    <!-- Título -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-sky-700">@ViewData["Title"]</h1>
        <p class="text-gray-600">Gestión de comercios afiliados al sistema bancario.</p>
    </div>

    <!-- Alertas -->
    @if (TempData["Ok"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <span>@TempData["Ok"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-center">
            <span>@TempData["Error"]</span>
        </div>
    }

    <!-- Botones de acción -->
    <div class="mb-6 flex flex-wrap gap-3">
        <a asp-action="Crear"
           class="bg-sky-600 hover:bg-sky-700 text-white font-medium px-4 py-2.5 rounded-lg transition-colors">
            Nuevo comercio
        </a>
        <a asp-controller="ConfiguracionComercio" asp-action="Index"
           class="bg-white hover:bg-gray-50 text-gray-700 font-medium px-4 py-2.5 rounded-lg border border-gray-300 transition-colors">
            Configuración de Comercios
        </a>
        <a asp-controller="ReporteMensual" asp-action="Index"
           class="bg-white hover:bg-gray-50 text-sky-600 font-medium px-4 py-2.5 rounded-lg border border-sky-300 transition-colors">
            Reportes mensuales
        </a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg">
            No hay comercios registrados.
        </div>
    }
    else
    {
        <!-- Tabla -->
        <div class="overflow-x-auto bg-white border border-gray-200 shadow-sm rounded-lg">
            <table class="min-w-full text-sm text-left">

                <thead class="bg-sky-50 text-sky-700 text-xs uppercase font-medium border-b border-gray-200">
                    <tr>
                        <th class="px-4 py-3">Identificación</th>
                        <th class="px-4 py-3">Tipo ID</th>
                        <th class="px-4 py-3">Nombre</th>
                        <th class="px-4 py-3">Tipo de comercio</th>
                        <th class="px-4 py-3">Teléfono</th>
                        <th class="px-4 py-3">Correo electrónico</th>
                        <th class="px-4 py-3">Estado</th>
                        <th class="px-4 py-3 text-center" style="width:240px;">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr class="border-b hover:bg-gray-50">

                            <td class="px-4 py-3">
                                @c.Identificacion
                            </td>

                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded-md text-xs font-semibold
                                            @(c.TipoIdentificacion == 1 ? "bg-blue-100 text-blue-700" : "bg-purple-100 text-purple-700")">
                                    @(c.TipoIdentificacion == 1 ? "Física" :
                                                                c.TipoIdentificacion == 2 ? "Jurídica" : "Desconocido")
                                                                                                                   </span>
                                                                                                               </td>

                            <td class="px-4 py-3">
                                @c.Nombre
                            </td>

                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded-md text-xs font-semibold
                                            @(c.TipoComercio == 1 ? "bg-orange-100 text-orange-700" :
                                                                            c.TipoComercio == 2 ? "bg-green-100 text-green-700" :
                                                                            c.TipoComercio == 3 ? "bg-yellow-100 text-yellow-700" :
                                                                            "bg-gray-100 text-gray-700")">
                                    @(c.TipoComercio == 1 ? "Restaurantes" :
                                                                c.TipoComercio == 2 ? "Supermercados" :
                                                                c.TipoComercio == 3 ? "Ferreterías" :
                                                                c.TipoComercio == 4 ? "Otros" : "Desconocido")
                        </span>
                    </td>

                            <td class="px-4 py-3">@c.Telefono</td>
                            <td class="px-4 py-3">@c.CorreoElectronico</td>

                            <td class="px-4 py-3">
                                <span class="px-2 py-1 rounded-md text-xs font-bold
                                            @(c.Estado ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                    @(c.Estado ? "Activo" : "Inactivo")
                                </span>
                            </td>

                            <td class="px-4 py-3">
                                <div class="flex flex-wrap gap-1 justify-center">
                                    <a asp-action="Editar" asp-route-id="@c.IdComercio"
                                       class="bg-yellow-500 hover:bg-yellow-600 text-white text-xs font-medium px-2 py-1 rounded">
                                        Editar
                                    </a>
                                    <a asp-action="Detalles" asp-route-id="@c.IdComercio"
                                       class="bg-blue-500 hover:bg-blue-600 text-white text-xs font-medium px-2 py-1 rounded">
                                        Detalles
                                    </a>
                                    <a asp-controller="ConfiguracionComercio" asp-action="Crear" asp-route-idComercio="@c.IdComercio"
                                       class="bg-gray-600 hover:bg-gray-700 text-white text-xs font-medium px-2 py-1 rounded">
                                        Config
                                    </a>
                                    <a asp-controller="Usuario" asp-action="Index" asp-route-idComercio="@c.IdComercio"
                                       class="bg-sky-600 hover:bg-sky-700 text-white text-xs font-medium px-2 py-1 rounded">
                                        Usuarios
                                    </a>
                                    <a asp-controller="Caja" asp-action="Index" asp-route-idComercio="@c.IdComercio"
                                       class="bg-green-600 hover:bg-green-700 text-white text-xs font-medium px-2 py-1 rounded">
                                        Cajas
                                    </a>
                                </div>
                            </td>

                        </tr>
                                }
                </tbody>

            </table>
        </div>
    }

</div>